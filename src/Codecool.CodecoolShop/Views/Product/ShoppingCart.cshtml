@model Codecool.CodecoolShop.Models.User

@{
    ViewData["Title"] = "ShoppingCart";
    decimal cartValue = 0 ;
    
}
<<script src="../js/CheckoutCounter.js" defer></script>
<h1>@ViewData["Title"]</h1>


    @foreach (var item in Model.ShoppingCart)
    {
        cartValue += item.DefaultPrice;
        <div class="shopping-cart-holder">
            <div class="img-container">
                <img src="../img/@(item.Name).jpg" width="100%" height="100%"/>
            </div>
            <div class="product-name-container">
                <h4>@item.Name</h4>
            </div>
            <div class="product-description-container">
                <div class="product-quantity-container">
                    <input type="number" min="1" max="@item.Quantity" value="1" onclick="onClickEventInput()"/>
                    <p>@item.DefaultPrice$</p>
                </div>
                <p>@item.Description</p>
            </div>
            

        </div>
    }

<p id="checkoutvalue">Total cart value @cartValue$</p>
<a asp-controller="Product" asp-action="Checkout">Checkout</a>
